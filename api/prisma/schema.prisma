generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  //@default(auto())  automatically generates a unique identifier for each user
  // @map("_id") maps the id field to the MongoDB _id field
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique
  email     String   @unique
  password  String
  //? means optional field for user avatar
  avatar    String?
  // @default(now()) sets the current date and time when a user is created
  createdAt DateTime @default(now())
} 